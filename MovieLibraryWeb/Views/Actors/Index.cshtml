@model IEnumerable<Actor>
<style>
    * {
        box-sizing: border-box;
    }

    body {
        font-family: Arial, Helvetica, sans-serif;
    }

    .column {
        float: left;
        width: 25%;
        padding: 0 10px;
    }

    .row {
        margin-top:24px;
    }

    .row:after {
        content: "";
        display: table;
        clear: both;
    }
    .card {
        width:100%;
        height:100%;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.4);
        padding: 4px;
        text-align: left;
        background-color: #f1f1f1;
        transition: all 0.15s ease-in-out;
    }
    .card:hover {
        box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
        width: 103%;
        height: 103%;
        transition: all 0.15s ease-in-out;
    }
    img {
        display: block;
        max-width: fit-content();
        max-height: 320px;
        width: auto;
        height: auto;
    }
</style>
<h1> Actors </h1>
<hr />
<br />
@for (int i = 0; i < Model.Count(); i += 4)
{
    <div class="row">
        @if (i < Model.Count())
        {
            <div class="column">
                <div class="card">
                    <img class="" src="@Model.ElementAt(i).Portrait"/>
                    <hr />
                    <h5 style="margin-left: 10px">@Model.ElementAt(i).Name @Model.ElementAt(i).Lastname</h5>
                    <p style="margin-left: 10px">Rating: @Model.ElementAt(i).Rating</p>
                    <a style="margin-left: 10px" href="/Actors/Actor/@Model.ElementAt(i).Id" target="_blank">See more</a>
                </div>
            </div>
        }
        @if (i + 1 < Model.Count())
        {
            <div class="column">
                <div class="card">
                    <img class="" src="@Model.ElementAt(i+1).Portrait" />
                    <hr />
                    <h5 style="margin-left: 10px">@Model.ElementAt(i + 1).Name @Model.ElementAt(i + 1).Lastname</h5>
                    <p style="margin-left: 10px">Rating: @Model.ElementAt(i + 1).Rating</p>
                    <a style="margin-left: 10px" href="/Actors/Actor/@Model.ElementAt(i+1).Id" target="_blank">See more</a>
                </div>
            </div>
        }
        @if (i + 2 < Model.Count())
        {
            <div class="column">
                <div class="card">
                    <img class="" src="@Model.ElementAt(i+2).Portrait" />
                    <hr />
                    <h5 style="margin-left: 10px">@Model.ElementAt(i + 2).Name @Model.ElementAt(i + 2).Lastname</h5>
                    <p style="margin-left: 10px">Rating: @Model.ElementAt(i + 2).Rating</p>
                    <a style="margin-left: 10px" href="/Actors/Actor/@Model.ElementAt(i+2).Id" target="_blank">See more</a>
                </div>
            </div>
        }
        @if (i + 3 < Model.Count())
        {
            <div class="column">
                <div class="card">
                    <img class="" src="@Model.ElementAt(i+3).Portrait" />
                    <hr />
                    <h5 style="margin-left: 10px">@Model.ElementAt(i + 3).Name @Model.ElementAt(i + 3).Lastname</h5>
                    <p style="margin-left: 10px">Rating: @Model.ElementAt(i + 3).Rating</p>
                    <a style="margin-left: 10px" href="/Actors/Actor/@Model.ElementAt(i+3).Id" target="_blank">See more</a>
                </div>
            </div>
        }
    </div>
}