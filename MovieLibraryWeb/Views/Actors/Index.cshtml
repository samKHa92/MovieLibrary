@for (int i = 0; i < Model.Count(); i += 4)
{
    <div class="row">
        @if (i < Model.Count())
        {
            <div class="column">
                <div class="card">
                    <img class="" src="@Model.ElementAt(i).Portrait" />
                    <hr />
                    <h5 style="margin-left: 10px">@Model.ElementAt(i).Name @Model.ElementAt(i).Lastname</h5>
                    <p style="margin-left: 10px">Rating: @Model.ElementAt(i).Rating</p>
                    <a style="margin-left: 10px" href="/Actors/Actor/@Model.ElementAt(i).Id" target="_blank">See more</a>
                    <a style="margin-left: 10px" href="/Actors/Edit/@Model.ElementAt(i).Id">Edit</a>
                    <a style="margin-left: 10px" asp-controller="Actors" asp-action="Delete" asp-route-id="@Model.ElementAt(i).Id">Delete</a>
